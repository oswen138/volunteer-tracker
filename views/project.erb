<h4>City Name: <%= @city.name %></h4>

<% if @city.trains %>
  <ul>
    <% @city.trains.each do |train| %>
      <li><a href="/trains/<%= train.id %>"><%= train.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no trains to display.</p>
<% end %>

<p><a href="/cities/<%= @city.id %>/edit">Edit city</a></p>
<a href="/home">Return to home page</a>
